{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "files": {
    "ignore": [
      ".turbo",
      ".next",
      "generated",
      "node_modules",
      "**/node_modules"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "useOptionalChain": "off"
      },
      "suspicious": {
        "noShadowRestrictedNames": "off",
        "noDoubleEquals": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useImportType": "off",
        "useConst": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all",
      "semicolons": "asNeeded"
    }
  }
}
